<div {{ attributes }}>
    <input placeholder="Search..." type="text" data-model="keyword">

    <div id="task-list" data-task-target="list">
    {% for task in this.data %}
        <input type="checkbox" data-task-id="{{ task.id }}">
        <div>{{ task.title }}</div>
    {% else %}
        <div>No results found.</div>
    {% endfor %}
    </div>
</div>
