{% extends 'base.html.twig' %}

{% block body %}
    <div data-controller="task">
        <div class="task-actions">
            <button type="button" class="btn" data-action="task#openAddForm">
                ➕ Thêm Task
            </button>
            <button type="button" class="btn btn-danger" data-action="task#deleteSelected">
                🗑 Xóa đã chọn
            </button>
        </div>

        <div class="modal fade" id="taskModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content" data-task-target="formContainer"></div>
            </div>
        </div>

        {{ component('TaskComponent', { id: 'TaskComponent' }) }}
    </div>
{% endblock %}
